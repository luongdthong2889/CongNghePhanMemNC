
@using RaoVat.Models
@model List<CATEGORY>

<style>
    #div-u {
        background-color: aquamarine;
        text-decoration: none;
    }

    a {
        color: #a94442;
        text-decoration: none;
        font-size: x-large;
    }

        a:hover {
            text-decoration: none;
        }
</style>
<h2 style="margin-top:100px">Danh Mục</h2>
<ul style="list-style-type:none" id="div-u">
    @{
        foreach (var item in Model)
        {
            <li class="div-cate">
                @Html.ActionLink(item.TENLOAI, "Index", "Categories", new { category = item.TENLOAI.Trim() }, "")
            </li>
        }
    }
    @Html.ActionLink("Tất cả danh mục", "Index", "Categories")
</ul>