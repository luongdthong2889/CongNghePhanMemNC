@model RaoVat.Models.RAOVAT

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<!-- CONTENT =============================-->
<section class="item content">
    <div class="container toparea">
        <div class="underlined-title">
            <div class="editContent">
                <h1 class="text-center latestitems">@Html.DisplayFor(model => model.TIEUDE)</h1>
            </div>
            
        </div>
        <div class="row">
            <div class="col-md-8">
                <div class="productbox" style="padding-top:50px;">

                    <img src="@Url.Content(Model.HINHANH1)" width="600" height="400" alt="">
                    <h2 style="padding-top:20px;">@Html.DisplayFor(model => model.TIEUDE)</h2>
                    <div class="clearfix">
                    </div>
                    <br />
                    <div class="product-details text-left">
                        <h4>Nội dung :</h4><hr />
                        <h4> @Html.DisplayFor(model => model.NOIDUNG)</h4>
                        <h4> @Html.DisplayFor(model => model.GIA)</h4>
                        <h4> @Html.DisplayFor(model => model.DIACHI)</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-4" style="padding-top: 50px;">
                <p><button class="w3-button w3-green w3-round-xxlarge" style="width:100%;">@Html.DisplayFor(model=>model.USER.SODIENTHOAI)</button></p>
                <p><button class="w3-button w3-green w3-round-xxlarge" style="width:100%;margin-top:10px;">Chat Ngay</button></p>
                <div class="properties-box" style="background-color:gainsboro;">
                    <ul class="unstyle">
                        <li><b class="propertyname">Địa Điểm:</b> @Html.DisplayFor(model => model.DIACHI)</li>
                        <li><b class="propertyname">Hình Thức:</b>@Html.DisplayFor(model => model.HINHTHUC.HINHTHUC1)</li>
                        <li><b class="propertyname">Tình Trạng:</b>@Html.DisplayFor(model => model.TINHTRANG.TINHTRANG1)</li>
                        <li><b class="propertyname">Hết Hạn:</b>@Html.DisplayFor(model => model.NGAYHETHAN)</li>
                        <li><b class="propertyname">Loại Tin:</b>@Html.DisplayFor(model => model.LOAITIN.LOAITIN1)</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CALL TO ACTION =============================-->
<section class="content-block" style="background-color:#00bba7;">
    <div class="container text-center">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                
            </div>
        </div>
    </div>
</section>

